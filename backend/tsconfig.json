{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", // This is important for Jest, which expects CommonJS by default
    "moduleResolution": "node",
    "esModuleInterop": true, // Ensures compatibility with ES modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src", // Optional: Depending on your project structure
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
